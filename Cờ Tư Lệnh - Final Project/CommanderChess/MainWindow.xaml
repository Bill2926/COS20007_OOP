<Window x:Class="CommanderChess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommanderChess"
        mc:Ignorable="d"
        Title="COMMANDER CHESS" SizeToContent="Height" Width="900"
        Icon="Assets/icon.png"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Loaded="MainWindow_Loaded">

    <Window.Resources>
        <Style TargetType="Image" x:Key="PieceImageStyle">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Single Viewbox that wraps both columns -->
        <Viewbox Stretch="Uniform">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Graveyard -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Gameboard -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Gamelog-->
                </Grid.ColumnDefinitions>

                <!-- Graveyard Canvas -->
                <Canvas x:Name="Graveyard"
                        Grid.Column="0"
                        Margin="10"/>

                <!-- Game Board -->
                <Border Grid.Column="1" Padding="5 20 10 20" Background="White"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Canvas x:Name="Placing"/>
                        <Canvas x:Name="Dot"/>
                    </Grid>
                </Border>

                <!-- Game Moves Log -->
                <Border Grid.Column="2" Padding="5 20 20 20" Background="White"
                        HorizontalAlignment="Center">
                    <Grid>
                        <Canvas x:Name="Log"/>
                    </Grid>
                </Border>
            </Grid>
        </Viewbox>
        
        <ContentControl x:Name="Start"/>
        <ContentControl x:Name="Menu"/>
    </Grid>
</Window>
